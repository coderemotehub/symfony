{% extends 'base.html.twig' %}

{% block title %}Hello PropertyController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-lg-4">
            <div class="text-center">
                <h4 class="my-3">Pon tu anuncio gratis</h4><button class="btn btn-primary w-75" type="button" style="background: #B62682;border-style: none;"><i class="far fa-building mx-2"></i>Publicar Anuncio</button>
            </div>
        </div>
        <div class="col-md-8 p-2">
            {% for property in properties %}
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col col-4" style="--bs-body-bg: #fff; background: url('https://images.pexels.com/photos/186077/pexels-photo-186077.jpeg?cs=srgb&dl=pexels-binyaminmellish-186077.jpg&fm=jpg') no-repeat center center; background-size: cover; border-radius: 10px"></div>
                        <div class="col">
                            <h4>{{property.id}}) {{property.dir}}</h4>
                            <h6 class="text-muted mb-2"><strong><span style="color: rgb(20, 20, 20);">{{  "%.2f"|format(property.price) }} €</span></strong></h6>
                            <p><span style="color: rgb(20, 20, 20);">La distribución es la siguiente; hall de entrada, acceso a cocina reformada íntegramente en el 2008. Aseo de visitas.</span></p>
                            <div class="text-center">
                                <div class="row" style="text-align: center;">
                                    <div class="col d-flex col-3" style="text-align: left;"><svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-house d-inline-flex mx-1">
                                            <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z"></path>
                                        </svg>
                                        <p class="d-inline-flex">{{property.roomn}}</p>
                                    </div>
                                    <div class="col d-flex col-3" style="text-align: left;"><svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-person-standing d-inline-flex mx-1">
                                            <path d="M8 3a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3M6 6.75v8.5a.75.75 0 0 0 1.5 0V10.5a.5.5 0 0 1 1 0v4.75a.75.75 0 0 0 1.5 0v-8.5a.25.25 0 1 1 .5 0v2.5a.75.75 0 0 0 1.5 0V6.5a3 3 0 0 0-3-3H7a3 3 0 0 0-3 3v2.75a.75.75 0 0 0 1.5 0v-2.5a.25.25 0 0 1 .5 0"></path>
                                        </svg>
                                        <p class="d-inline-flex">{{property.bathn}}</p>
                                    </div>
                                    <div class="col d-flex col-3" style="text-align: left;"><i class="material-icons d-inline-flex mx-1">photo_size_select_small</i>
                                        <p class="d-inline-flex">{{property.sqtm}} mts2</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
